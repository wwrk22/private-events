<% content_for :head do %>
  <title><%= @user_hosted_events.keys.first %></title>
<% end %>

<div>
  <h3><%= "Hello, #{@user_hosted_events.keys.first}!" %></h3>
</div>

<div>
  <h4>Events I'm hosting</h4>
  <ul>
    <% @user_hosted_events.values.each do |events| %>
      <% events.each do |event| %>
        <li>
          <%= "#{event.name} @#{event.event_location}, on #{event.event_date}" %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
